{
  "scripts": {
    "build": "tsc",
    "dev": "nodemon src/index.ts",
    "start": "node dist/index.js",
    "stop": "pm2 stop 'Voice Channel Logger'",
    "restart": "pm2 restart 'Voice Channel Logger'",
    "logs": "pm2 logs 'Voice Channel Logger' --lines 20 --nostream",
    "lint": "eslint src/**/*.ts --fix",
    "lint:check": "eslint src/**/*.ts",
    "type-check": "tsc --noEmit",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev:test": "nodemon -r dotenv/config src/index.ts dotenv_config_path=.env.test",
    "start:test": "node -r dotenv/config dist/index.js dotenv_config_path=.env.test",
    "build:test": "tsc && npm run start:test"
  },
  "dependencies": {
    "discord.js": "^14.7.1",
    "dotenv": "^16.4.7"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.2.0",
    "prettier-eslint-cli": "^8.0.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.8.3"
  }
}
